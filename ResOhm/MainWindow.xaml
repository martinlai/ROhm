<Window x:Class="ResOhm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResOhm"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid Margin="-6,0,5.6,-20.6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="515*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="24,15,16.2,262" Orientation="Vertical">
            <TextBox BorderThickness="0" Text="Please select the number of bands your resistor has:" Margin="12,0,-0.2,0" Height="16"/>
            <ComboBox x:Name ="NumOfBands" RenderTransformOrigin="0.5,0.5" Margin="12,0,1.2,0" Height="19"  SelectionChanged="NumOfBands_SelectionChanged" >
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
            </ComboBox>
            <Image Margin="12,12,11.8,12" x:Name="image1" Stretch="None" Height="60" />
        </StackPanel>
        <UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" Margin="0,35,10.2,356.4">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
            </StackPanel>
        </UserControl>
        <Grid Margin="10,108,360.2,262">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="121*"/>
                <ColumnDefinition Width="41*"/>
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <WrapPanel x:Name="ResistorBands" Grid.ColumnSpan="5" Margin="28,34,-330.2,-36.2" Orientation="Horizontal">
                <ComboBox x:Name="Band1"
    				ItemsSource="{Binding ResColours, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"  
    				DisplayMemberPath="Key" 
    				SelectedValuePath="Value"  
    				RenderTransformOrigin="0.5,0.5" Height="21" Width="77" />
                <ComboBox x:Name="Band2"
    				ItemsSource="{Binding ResColours, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"  
    				DisplayMemberPath="Key" 
    				SelectedValuePath="Value"  
    				RenderTransformOrigin="0.5,0.5" Height="21" Width="77" />
                <ComboBox x:Name="Band3"
    				ItemsSource="{Binding ResColours, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"  
    				DisplayMemberPath="Key" 
    				SelectedValuePath="Value"  
    				RenderTransformOrigin="0.5,0.5" Height="21" Width="77" />
                <ComboBox x:Name="Band4"
    				ItemsSource="{Binding ResColours, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"  
    				DisplayMemberPath="Key" 
    				SelectedValuePath="Value"  
    				RenderTransformOrigin="0.5,0.5" Height="21" Width="77" />
                <ComboBox x:Name="Band5"
    				ItemsSource="{Binding ResColours, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"  
    				DisplayMemberPath="Key" 
    				SelectedValuePath="Value"  
    				RenderTransformOrigin="0.5,0.5" Height="21" Width="77" />
                <ComboBox x:Name="Band6"
    				ItemsSource="{Binding ResColours, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"  
    				DisplayMemberPath="Key" 
    				SelectedValuePath="Value"  
    				RenderTransformOrigin="0.5,0.5" Height="21" Width="77" />
            </WrapPanel>
            <TextBox BorderThickness ="0" Grid.ColumnSpan="5" Margin="28,62,-111.2,-61.8">Please select the colour of the bands from left to right</TextBox>
        </Grid>


        <Button x:Name="ConvertButton" Content="Confirm" HorizontalAlignment="Center" Margin="241,325,268.2,0" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.937,3.573" Height="26" Click="ConvertButton_Click" />



    </Grid>
</Window>
